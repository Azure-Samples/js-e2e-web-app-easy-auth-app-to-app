{
    "Sample": {
        "Author": "verisen",
        "Title": "How to secure an ASP.NET Core Web API with the Microsoft identity platform",
        "Level": 200,
        "Client": "my-web-app",
        "Service": "my-web-api",
        "RepositoryUrl": "active-directory-aspnetcore-webapp-openidconnect-v2",
        "Endpoint": "AAD v2.0",
        "Description": "This sample demonstrates an ASP.NET Core Web App signing-in a user and calling an ASP.NET Core Web API that is secured with Azure AD.",
        "Languages": [
            "javascript"
        ]
    },
    "AADApps": [
        {
            "Id": "service",
            "Name": "my-web-api",
            "Kind": "WebApi",
            "Audience": "AzureADMyOrg",
            "HomePage": "https://localhost:44321/",
            "EnableIdTokenIssuance": true,
            "PasswordCredentials": "Auto",
            "Scopes": [
                "user_impersonation"
            ],
            "AppRoles": [],
            "RequiredResourcesAccess": [
                {
                    "Resource": "Microsoft Graph",
                    "DelegatedPermissions": [
                        "User.Read"
                    ]
                }
            ]
        },
        {
            "Id": "client",
            "Kind": "WebApp",
            "Audience": "AzureADMyOrg",
            "Name": "my-web-app",
            "ReplyUrls": "https://client-a.azurewebsites.net/.auth/login/aad/callback",
            "EnableIdTokenIssuance": true,
            "RequiredResourcesAccess": [
                {
                    "Resource": "service",
                    "DelegatedPermissions": [
                        "user_impersonation"
                    ]
                }
            ]
        }
    ],
    "CodeConfiguration": [
        {
            "App": "service",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\authConfig.js",
            "Mappings": [
                {
                    "key": "ida:Tenant",
                    "value": "$tenantName"
                },
                {
                    "key": "ida:Audience",
                    "value": "$serviceIdentifierUri"
                },
                {
                    "key": "ida:AppKey",
                    "value": "$serviceAppKey"
                },
                {
                    "key": "ida:ClientID",
                    "value": "service.AppId"
                }
            ]
        },
        {
            "App": "client",
            "SettingKind": "Replace",
            "SettingFile": "\\..\\authConfig.js",
            "Mappings": [
                {
                    "key": "idb:Tenant",
                    "value": "$tenantName"
                },
                {
                    "key": "idb:ClientId",
                    "value": "client.AppId"
                },
                {
                    "key": "idb:ClientScope",
                    "value": "service.ScopeDefault"
                },
                {
                    "key": "idb:ClientUrl",
                    "value": "service.HomePage"
                }
            ]
        }
    ]
}